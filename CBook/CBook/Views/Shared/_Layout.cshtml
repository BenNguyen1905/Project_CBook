<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />

    <script src="@Url.Content("~/Scripts/jquery-1.8.2.min.js")"
            type="text/javascript"></script>

    <script src="@Url.Content("~/Scripts/main.js.js")"
            type="text/javascript"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            $('#backtop').hide();
            $(window).scroll(function () {
                if ($(window).scrollTop() != 0)
                    $('#backtop').fadeIn();
                else
                    $('#backtop').fadeOut();
            });
            $('#backtop').click(function () {
                $('html,body').animate({ scrollTop: 0 }, 500);
            });
        });
    </script>
    <style>
        #backtop {
            width: 30px;
            height: 23px;
            border-radius: 25px;
            position: fixed;
            bottom: 10px;
            right: 10px;
            background: #D7720A;
            color: white;
            font-weight: bold;
            text-align: center;
            padding-top: 7px;
            cursor: pointer;
        }

            #backtop:hover {
                background: #00918D;
            }
    </style>
</head>
<body>
    @*<div>*@
        <div class="main">
            <div id="top">
                <uc1:top ID="top1" />
            </div>
            <div id="logo-search">

                <div id="search">
                    <input type="text" id="txtSearch" name="txtSearch" size="30" placeholder="Nhập từ khóa cần tìm" />
                    <input type="image" name="btnSearch" id="btnSearch" src="~/image/search.png" height="15" width="15" />
                </div>
                <div id="logo">
                    <img src="~/image/logo.png" alt="logoCbook" height="140" width="250" />

                </div>




            </div>

            <div id="menu" style="background-color:#006600; height:40px;">
                <ul>
                    <li><a href="Default.aspx">Trang Chủ</a></li>
                    <li><a href="Detail.aspx?dm=1">Sách Giáo Dục</a></li>
                    <li><a href="Detail.aspx?dm=5">Sách Y Học-Sức Khỏe</a></li>
                    <li><a href="Detail.aspx?dm=2">Tiểu Thuyết</a></li>
                    <li><a href="Detail.aspx?dm=4">Sách Khoa Học</a></li>
                    <li><a href="Detail.aspx?dm=3">Truyện Tranh</a></li>
                    <li><a href="Detail.aspx?dm=6">Sách Lịch Sử</a></li>
                </ul>
                <div id="cart">
                    <a href="Cart.aspx" style="color:red;font-weight:bold;" title="Giỏ hàng">
                        <asp:Label ID="lblSoSP" runat="server" Text="Label"></asp:Label>
                        <span style="color:black;font-weight:normal;"> sản phẩm</span>
                    </a>
                </div>
            </div>
            <div id="banner">
                <div id="slider">
                    <div id="innerslide"></div>
                    <script>
                        $(document).ready(function (e) {
                            makeslide('#innerslide', "");
                        });
                    </script>
                </div>
                &nbsp;
            </div>
            @*<div id="content">
                <asp:ContentPlaceHolder id="ContentPlaceHolder1" runat="server">

                </asp:ContentPlaceHolder>
            </div>*@
        </div>
    <div id="footer">
        <div class="container">
            <p>CBook Co, Ltd. &copy; 2019</p>
        </div>
        <div class="socialinks">
            <a href="https://www.facebook.com/Nam.thanh.1905" target="_blank"><img src="../image/facebook-logo.png" style="width:40px; height:40px; " alt="facebook"></a>
            <a href="mailto:thien.t176615@vanlanguni.vn" target="_blank"><img src="../image/mail-logo.png" style="width:40px; height:40px; padding-left: 8px;" alt="mail"></a>
        </div>
    </div>

    <div class="container body-content">
        @RenderBody()
        
    </div>
    @*</div>*@
</body>
</html>
