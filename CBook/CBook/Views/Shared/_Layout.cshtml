    <script src="@Url.Content("~/Scripts/main.js.js")"
            type="text/javascript"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            $('#backtop').hide();
            $(window).scroll(function () {
                if ($(window).scrollTop() != 0)
                    $('#backtop').fadeIn();
                else
                    $('#backtop').fadeOut();
            });
            $('#backtop').click(function () {
                $('html,body').animate({ scrollTop: 0 }, 500);
            });
        });
    </script>
    <style>
        #backtop {
            width: 30px;
            height: 23px;
            border-radius: 25px;
            position: fixed;
            bottom: 10px;
            right: 10px;
            background: #D7720A;
            color: white;
            font-weight: bold;
            text-align: center;
            padding-top: 7px;
            cursor: pointer;
        }

            #backtop:hover {
                background: #00918D;
            }
    </style>
</head>
